<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        			
    <item android:state_pressed="true" >
					     <shape android:shape="rectangle"  >
					         <gradient android:angle="90" android:endColor="#000000" android:startColor="#FFFFFF" />
					         <corners android:radius="15dp" />
                             <stroke android:width="4dp" android:color="@color/blue_dark_line" />
					     </shape>
					 </item>  
    
    
					<item android:state_enabled="true" >
					     <shape android:shape="rectangle"  >
					         <gradient android:angle="-90" android:endColor="#F0FEFE" android:startColor="#FFFFFF" />
					         <corners android:radius="15dp" />
                             <stroke android:width="4dp" android:color="@color/blue_dark_line" />
					     </shape>
					 </item>  
					 <item android:state_enabled="false">
					     <shape android:shape="rectangle"  >
					         <corners android:radius="15dp" />
					         <gradient android:angle="-90" android:endColor="#000000" android:startColor="#FFFFFF" />
                             <stroke android:width="4dp" android:color="@color/blue_dark_line" />
					     </shape>
					 </item>  
					<item >
					    <shape android:shape="rectangle"  >
					         <corners android:radius="15dp" />
					         <gradient android:angle="90" android:startColor="#000000" android:endColor="#FFFFFF"/>
                            <stroke android:width="4dp" android:color="@color/blue_dark_line" />
					     </shape>
					 </item>
</selector>