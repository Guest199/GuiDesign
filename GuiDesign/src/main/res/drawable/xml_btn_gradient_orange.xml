<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android" >
        			
    <item android:state_pressed="true" >
					     <shape android:shape="rectangle"  >
					         <gradient android:angle="90" android:endColor="#F0E8A0" android:startColor="#FFA000" />
					         <corners android:radius="15dp" />
                             <stroke android:width="4dp" android:color="@color/blue_dark_line" />
					     </shape>
					 </item>  
    
    
					<item android:state_enabled="true" >
					     <shape android:shape="rectangle"  >
					         <gradient android:angle="-90" android:endColor="#FFA000" android:startColor="#F0E8A0" />
					         <corners android:radius="15dp" />
                             <stroke android:width="4dp" android:color="@color/blue_dark_line" />
					     </shape>
					 </item>  
					 <item android:state_enabled="false">
					     <shape android:shape="rectangle"  >
					         <corners android:radius="15dp" />
					         <gradient android:angle="-90" android:endColor="#BABABA" android:startColor="#E2E2E2" />
                             <stroke android:width="4dp" android:color="@color/blue_dark_line" />
					     </shape>
					 </item>  
					<item >
					    <shape android:shape="rectangle"  >
					         <corners android:radius="15dp" />
                            <stroke android:width="4dp" android:color="@color/blue_dark_line" />
					         <gradient android:angle="90" android:startColor="#FF0000" android:endColor="#F5F7F7"/>        
					     </shape>
					 </item>
</selector>