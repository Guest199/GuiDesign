<resources xmlns:android="http://schemas.android.com/apk/res/android">


    <style name="AppBaseTheme" parent="android:Theme.Holo.Light.DarkActionBar" />

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:textViewStyle">@style/MyTextView</item>
    </style>

    <style name="MyTextView" parent="android:Widget.TextView">
        <item name="android:textSize">35dp</item>
    </style>

    <style name="main_text">
        <item name="android:textColor">@color/grey</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="text_title" parent="main_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/blue_dark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
        <item name="android:alpha">1</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
    </style>
    <!--Calendar Styles-->
    <style name="text_normal" parent="main_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
        <item name="android:alpha">1</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
    </style>

    <style name="text_shadded" parent="main_text">
        <item name="android:background">@drawable/xml_btn_gradient_black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
    </style>

    <style name="text_blue" parent="main_text">
        <item name="android:textColor">@color/blue_dark_line</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_medium_4</item>
        <item name="android:alpha">1</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
    </style>
    <style name="text_title_no_background" parent="main_text">
        <item name="android:textColor">@color/purple</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
        <item name="android:alpha">1</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
    </style>

    <style name="button_red" parent="ButtonTheme">
        <item name="android:background">@drawable/xml_btn_gradient_red</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
        <item name="android:textColor">@drawable/xml_btn_text_cancel</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_green" parent="ButtonTheme">
        <item name="android:background">@drawable/xml_btn_gradient_green</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="button_normal" parent="ButtonTheme">
        <item name="android:background">@drawable/xml_item</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="text_view_rounded_corners" parent="main_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
        <item name="android:alpha">1</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/xml_rounded_bg</item>
        <item name="android:layout_marginLeft">@dimen/size_small_4</item>
        <item name="android:layout_marginRight">@dimen/size_small_4</item>
    </style>

    <style name="text_view_rounded_corners_gradient_yellow" parent="main_text">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/xml_box_shadow_yellow</item>
        <item name="android:layout_marginLeft">@dimen/size_small_4</item>
        <item name="android:layout_marginRight">@dimen/size_small_4</item>
    </style>
    <style name="text_view_rounded_corners_gradient_white" parent="main_text">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/xml_box_shadow_white</item>
        <item name="android:layout_marginLeft">@dimen/size_small_4</item>
        <item name="android:layout_marginRight">@dimen/size_small_4</item>
    </style>
    <!--<style name="ButtonTheme" parent="@android:style/Widget.Button">-->
    <style name="ButtonTheme" >
        <item name="android:background">@drawable/xml_btn</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">3</item>
        <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>

    <style name="button_blue" parent="ButtonTheme">
        <item name="android:background">@drawable/xml_btn_gradient_blue</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_orange" parent="ButtonTheme">
        <item name="android:background">@drawable/xml_btn_gradient_orange</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_pink" parent="ButtonTheme">
        <item name="android:background">@drawable/xml_btn_gradient_pink</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="button_white" parent="ButtonTheme">
        <item name="android:background">@drawable/xml_btn_gradient_white</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_info_msg" parent="main_text">
        <item name="android:textColor">@color/yellow</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/size_medium_1</item>
        <item name="android:alpha">1</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
    </style>

    <style name="text_info" parent="main_text">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:alpha">1</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">1</item>
        <item name="android:shadowDy">1</item>
        <item name="android:shadowRadius">0.6</item>
    </style>

    <style name="text_pad">
        <item name="android:paddingEnd">@dimen/size_small_3</item>
        <item name="android:paddingStart">@dimen/size_small_3</item>
        <item name="android:paddingRight">@dimen/size_small_3</item>
        <item name="android:paddingLeft">@dimen/size_small_3</item>
    </style>

<style name="text_normal_size" parent="main_text">
    <item name="android:textColor">@color/white</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/size_small_7</item>
    <item name="android:alpha">1</item>
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">0.6</item>
</style>

<style name="text_black" parent="main_text">
    <item name="android:textColor">@color/blackish</item>
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">@dimen/size_medium_2</item>
    <item name="android:alpha">1</item>
    <item name="android:shadowColor">#000000</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">0.6</item>
    <item name="android:includeFontPadding">false</item>
</style>

</resources>