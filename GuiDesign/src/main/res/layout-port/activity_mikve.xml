<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:theme = "@style/AppTheme"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout
        android:theme = "@style/AppTheme"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="#19A3A3"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_title"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_large_2"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layoutDirection="ltr"
            android:background="@color/blue_cyan"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_operator_msg"
                android:layout_width="1dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="@dimen/size_small_7"
                android:visibility="gone" />

            <mid.uicomp.AutoResizeTextView
                android:id="@+id/tv_app_header"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/otot_smlr"
                android:drawableRight="@drawable/comm_ok"
                android:gravity="center"
                android:text="@string/entry_mode_title"
                android:maxLines="2"
                android:textSize="@dimen/size_medium_3"
                style="@style/text_title_no_background"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_lang"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_large_1_1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/blue_cyan"
            android:layoutDirection="ltr"
            android:visibility="gone"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btn_eng"
                style="@style/button_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_small_3"
                android:layout_weight="0.3"
                android:drawablePadding="5dp"
                android:paddingEnd="@dimen/size_medium_1_1"
                android:paddingStart="@dimen/size_medium_1_1"
                android:visibility="gone"
                android:text="@string/English"
                android:textSize="@dimen/size_medium_2" />

            <Button
                android:id="@+id/btn_heb"
                style="@style/button_white"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_small_3"
                android:layout_weight="0.3"
                android:drawablePadding="5dp"
                android:paddingEnd="@dimen/size_medium_1_1"
                android:paddingStart="@dimen/size_medium_1_1"
                android:visibility="gone"
                android:text="@string/Hebrew"
                android:textSize="@dimen/size_medium_2" />

            <Button
                android:id="@+id/btn_yid"
