                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_small_3"
                android:layout_weight="0.3"
                android:drawablePadding="5dp"
                android:paddingEnd="@dimen/size_medium_1_1"
                android:paddingStart="@dimen/size_medium_1_1"
                android:visibility="gone"
                android:text="@string/Yiddish"
                android:textSize="@dimen/size_medium_2" />

            <Button
                android:id="@+id/btn_donation"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/size_small_2"
                android:layout_weight="0.25"
                android:drawablePadding="5dp"
                android:paddingEnd="@dimen/size_medium_1_1"
                android:paddingStart="@dimen/size_medium_1_1"
                android:text="@string/Donation"
                android:textSize="@dimen/size_medium_2"
                android:visibility="gone"
                style="@style/button_green"
                />

        </LinearLayout>

