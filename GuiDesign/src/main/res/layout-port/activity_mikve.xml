                        android:layout_margin="@dimen/size_small_5"
                        android:layout_weight="0.2"
                        android:drawableTop="@drawable/pay"
                        android:gravity="center"
                        android:text="@string/mode_custom_cc_or_cash"
                        android:textSize="@dimen/size_medium_4" />

                    <TextView
                        android:id="@+id/tv_paid_by_cash"
                        style="@style/text_shadded"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_weight="0.04"
                        android:paddingStart="@dimen/size_small_7"
                        android:paddingEnd="@dimen/size_small_7"
                        android:layout_gravity="center"
