                android:layout_height="@dimen/size_large_2"
                android:layout_margin="@dimen/size_small_5"
                android:layout_weight="0.1"
                android:gravity="center_horizontal|center_vertical"
                android:text="@string/Price_normal"
                android:textSize="@dimen/size_medium_4"
