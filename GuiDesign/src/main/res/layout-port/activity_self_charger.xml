<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/ll_self_charger_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/water_bckgrnd"
        android:orientation="vertical"
        android:paddingBottom="@dimen/size_small_2"
        android:paddingStart="@dimen/size_small_2"
        android:paddingEnd="@dimen/size_small_2"
        android:paddingTop="@dimen/size_small_2"
        >

        <LinearLayout
            android:id="@+id/ll_title"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_large_2"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@drawable/background_green_s">

            <TextView
                android:id="@+id/tv_operator_msg"
                android:layout_width="380dp"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:textSize="@dimen/size_small_7"
                android:visibility="gone"
                />

            <mid.uicomp.AutoResizeTextView
                android:id="@+id/tv_app_header"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:drawableLeft="@drawable/otot_smlr"
                android:drawableRight="@drawable/comm_ok"
                android:gravity="center"
                android:text="@string/self_charge_mode"
                android:textSize="@dimen/size_medium_3"
                android:maxLines="2"
                style="@style/text_title_no_background"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_header"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/size_small_3"
            style="@style/text_view_rounded_corners"
            >

            <TextView
                android:id="@+id/tv_card_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="clip_vertical"
                android:padding="@dimen/size_small_4"
                android:textColor="@color/black"
                android:textSize="@dimen/size_medium_1_1"
                android:textStyle="bold"
                android:layout_weight="0.5"
                />

            <TextView
                android:id="@+id/tv_card_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="clip_vertical"
                android:padding="@dimen/size_small_4"
                android:textColor="@color/black"
                android:textSize="@dimen/size_medium_1_1"
                android:textStyle="bold"
                android:layout_weight="0.5"
                />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_commis"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_medium_1"
            android:gravity="center"
            android:textColor="@color/red"
            android:background="@color/yellow"
            android:visibility="gone"
            android:textSize="@dimen/size_small_7" />

        <TextView
            android:id="@+id/tv_note"
            android:layout_width="fill_parent"
            android:layout_height="@dimen/size_medium_1"
            android:gravity="center"
            android:textColor="@color/red"
            android:background="@color/yellow"
            android:visibility="gone"
            android:textSize="@dimen/size_small_7" />

        <LinearLayout
    android:id="@+id/ll_remark"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_large_1_1"
    android:visibility="gone"
    style="@style/text_view_rounded_corners_gradient_white">

    <mid.uicomp.AutoResizeTextView
        android:id="@+id/tv_remark"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:text="@string/entry_mode_title"
        android:textColor="@color/blue_dark_line"
        android:maxLines="3"
        android:textSize="@dimen/size_medium_3"
        android:textStyle="bold"
        />

</LinearLayout>

        <RelativeLayout
            android:id="@+id/rl_pre_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_weight="50"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            >

            <ImageView
                android:id="@+id/iv_frame_out"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:background="@drawable/xml_bg_frame"
                android:contentDescription=""
                />

            <ImageView
                android:id="@+id/iv_frame_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignBottom="@+id/iv_frame_out"
                android:layout_alignStart="@+id/iv_frame_out"
                android:layout_alignLeft="@+id/iv_frame_out"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_alignEnd="@+id/iv_frame_out"
                android:layout_alignRight="@+id/iv_frame_out"
                android:layout_alignTop="@+id/iv_frame_out"
                android:layout_centerInParent="true"
                android:layout_margin="18dp"
                android:background="@drawable/xml_bg_frame"
                />

            <ImageView
                android:id="@+id/iv_frame_in"
                android:background="@drawable/xml_bg_frame"
                android:layout_alignBottom="@+id/iv_frame_center"
                android:layout_alignStart="@+id/iv_frame_center"
                android:layout_alignEnd="@+id/iv_frame_center"
                android:layout_alignTop="@+id/iv_frame_center"
                android:layout_alignLeft="@+id/iv_frame_center"
                android:layout_alignRight="@+id/iv_frame_center"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="false"
                android:layout_alignParentStart="false"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_centerInParent="true"
                android:layout_margin="18dp"
                />

            <TextView
                android:id="@+id/tv_show_mode"
                android:background="@color/button_focused_color_start"
                android:layout_alignTop="@+id/iv_frame_in"
                android:layout_alignLeft="@+id/iv_frame_in"
                android:layout_alignStart="@+id/iv_frame_in"
                android:layout_alignBottom="@+id/iv_frame_in"
                android:layout_alignRight="@+id/iv_frame_in"
                android:layout_alignEnd="@+id/iv_frame_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.1"
                android:text="@string/to_start_show_card"
                android:drawableTop="@drawable/mifare_card_s"
                android:textSize="@dimen/size_medium_4"
                android:textStyle="bold"
                android:padding="@dimen/size_medium_7"
                android:gravity="center"
                android:layout_marginLeft="@dimen/size_small_3"
                android:layout_marginTop="@dimen/size_small_3"
                android:layout_marginBottom="@dimen/size_small_3"
                android:layout_marginRight="@dimen/size_small_3"
                style="@style/text_info_msg"
                />

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_on_card_view"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.01"
            android:baselineAligned="false"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/ll_payment"
                style="@style/text_view_rounded_corners"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/size_small_5">

                <TextView
                    android:id="@+id/tv_payment_title"
                    style="@style/text_title"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/size_small_2"
                    android:gravity="center"
                    android:text="@string/Payment_details"
                    android:textSize="@dimen/size_medium_2"
                    android:textStyle="bold" />

                <LinearLayout
                    android:id="@+id/ll_to_pay"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_payment_title"
                    android:layout_marginTop="@dimen/size_small_2"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_pad"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:text="@string/to_pay"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_medium_2"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_to_pay"
                        style="@style/text_pad"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:tag="Value"
                        android:text="$100.00"
                        android:textColor="@color/black"

                        android:textSize="@dimen/size_medium_2"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_onCard"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_to_pay"
                    android:layout_marginTop="@dimen/size_small_2"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_pad"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:text="@string/on_card"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_medium_2" />

                    <TextView
                        android:id="@+id/tv_on_card"
                        style="@style/text_pad"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:tag="Value"
                        android:text="$100.00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_medium_2" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_byCash"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_onCard"
                    android:layout_marginTop="@dimen/size_small_2"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_pad"
                        android:layout_width="fill_parent"

                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"

                        android:gravity="start"
                        android:text="@string/Total_paid"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_medium_2" />

                    <TextView
                        android:id="@+id/tv_paid_by_cash"
                        style="@style/text_pad"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"

                        android:layout_weight="0.5"
                        android:gravity="start"

                        android:tag="Value"
                        android:text="$100.00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_medium_2" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_byCredit"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ll_byCash"
                    android:layout_marginTop="@dimen/size_small_2"
                    android:orientation="horizontal">

                    <TextView
                        style="@style/text_pad"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:text="@string/paid_by_credit_card"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_medium_2" />

                    <TextView
                        android:id="@+id/tv_paid_by_credit"
                        style="@style/text_pad"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="start"
                        android:tag="Value"
                        android:text="$100.00"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_medium_2" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_Total"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="false"
                    android:layout_below="@+id/ll_byCredit"
                    android:layout_marginTop="@dimen/size_small_2"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <TextView
                        style="@style/text_title_no_background"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.5"

                        android:gravity="start"
                        android:padding="5dp"

                        android:text="@string/Price_total"
                        android:textSize="@dimen/size_medium_4"

                        />

                    <TextView
                        android:id="@+id/tv_price_total"
                        style="@style/text_title_no_background"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:gravity="start"

                        android:padding="5dp"
                        android:tag="Value"

                        android:text="$100.00"
                        android:textSize="@dimen/size_medium_4" />

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/ll_info"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginEnd="@dimen/size_small_4"
                android:layout_marginRight="@dimen/size_small_4"
                android:layout_weight="0.5"
                android:orientation="vertical"
                android:visibility="visible">

                <TextView
                    android:id="@+id/tv_month_price"
                    style="@style/button_pink"
                    android:layout_width="fill_parent"
                    android:layout_height="@dimen/size_large_3"
                    android:layout_margin="@dimen/size_small_3"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/size_medium_4"
                    android:visibility="gone" />


                <TextView
                    android:id="@+id/tv_show_card"
                    style="@style/button_green"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_margin="@dimen/size_small_3"
                    android:drawableLeft="@drawable/card_color_"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/show_card_to_save"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/size_medium_4"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_btn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="visible"
            android:layout_weight="0"
            android:padding="@dimen/size_small_5"

            >

            <Button
                android:id="@+id/btn_entry"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_large_1"

                android:paddingRight="@dimen/size_small_5"
                android:paddingLeft="@dimen/size_small_5"
                android:layout_marginStart="@dimen/size_small_5"
                android:layout_marginEnd="@dimen/size_small_5"
                android:layout_marginLeft="@dimen/size_small_5"
                android:layout_marginRight="@dimen/size_small_5"

                android:drawableStart="@drawable/door_s"
                android:drawableLeft="@drawable/door_s"
                android:paddingEnd="@dimen/size_medium_1_1"
                android:paddingStart="@dimen/size_medium_1_1"

                android:gravity="center"
                android:text="@string/back"
                android:textSize="@dimen/size_medium_2"
                android:layout_weight="0.3"
                style="@style/button_blue"
                />

            <Button
                android:id="@+id/btn_cancel"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_large_1"
                android:paddingRight="@dimen/size_small_5"
                android:paddingLeft="@dimen/size_small_5"

                android:layout_marginStart="@dimen/size_small_5"
                android:layout_marginEnd="@dimen/size_small_5"
                android:layout_marginLeft="@dimen/size_small_5"
                android:layout_marginRight="@dimen/size_small_5"

                android:paddingEnd="@dimen/size_medium_1_1"
                android:paddingStart="@dimen/size_medium_1_1"

                android:enabled="true"
                android:visibility="gone"
                android:gravity="center"
                android:text="@string/Cancel"
                android:textSize="@dimen/size_medium_2"
                android:layout_weight="0.3"
                style="@style/button_red"
                />

            <Button
                android:id="@+id/btn_save"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_large_1"
                android:paddingRight="@dimen/size_small_5"
                android:paddingLeft="@dimen/size_small_5"

                android:layout_marginStart="@dimen/size_small_5"
                android:layout_marginEnd="@dimen/size_small_5"
                android:layout_marginLeft="@dimen/size_small_5"
                android:layout_marginRight="@dimen/size_small_5"

                android:paddingEnd="@dimen/size_medium_1_1"
                android:paddingStart="@dimen/size_medium_1_1"

                android:text="@string/save"
                android:visibility="gone"
                android:gravity="center"
                android:textSize="@dimen/size_medium_2"
                android:layout_weight="0.3"
                style="@style/button_green"
                />

            <Button
                android:id="@+id/btn_more"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_large_1_1"
                android:layout_marginLeft="@dimen/size_small_4"
                android:layout_marginRight="@dimen/size_small_3"
                android:drawablePadding="5dp"
                android:text="@string/More"
                android:layout_weight="0.7"
                android:textSize="@dimen/size_medium_3"
                android:paddingEnd="@dimen/size_medium_1_1"
                android:paddingStart="@dimen/size_medium_1_1"
                android:drawableStart="@drawable/debt_s"
                android:drawableLeft="@drawable/debt_s"
android:visibility="gone"
                style="@style/button_orange"
                />

            <Button
                android:id="@+id/btn_limit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_large_1"

                android:paddingRight="@dimen/size_small_5"
                android:paddingLeft="@dimen/size_small_5"
                android:layout_marginStart="@dimen/size_small_5"
                android:layout_marginEnd="@dimen/size_small_5"
                android:layout_marginLeft="@dimen/size_small_5"
                android:layout_marginRight="@dimen/size_small_5"

                android:paddingEnd="@dimen/size_medium_1_1"
                android:paddingStart="@dimen/size_medium_1_1"

                android:visibility="gone"
                android:gravity="center"
                android:text="@string/Limit_charge"
                android:textSize="@dimen/size_medium_2"
                android:layout_weight="0.3"
                style="@style/button_white"
                />

        </LinearLayout>

    </LinearLayout>

    <FrameLayout
        android:id="@+id/fl_msg"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:visibility="gone"
        />

</RelativeLayout>