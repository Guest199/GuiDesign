<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <VideoView
        android:id="@+id/vv_show_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>

    <androidx.constraintlayout.widget.Group
        android:id="@+id/dateGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="tv_date,tv_time,tv_date_heb" />

    <TextView
        android:id="@+id/tv_date"
        style="@style/text_normal_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/placeholder_date"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/text_normal_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/placeholder_time"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date_heb"
        style="@style/text_normal_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/placeholder_logo_text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_operator_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/text_normal_size"
        android:textAlignment="center"
        android:visibility="gone"
        android:text="@string/operator_message"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_date_heb"
        app:layout_constraintBottom_toTopOf="@id/viewLogo"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent=".1" />

    <View
        android:id="@+id/viewLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:visibility="visible"
        android:background="@drawable/ic_logo_bg"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/viewDetails"
        app:layout_constraintStart_toStartOf="@id/tv_date"
        app:layout_constraintTop_toBottomOf="@id/tv_date"
        app:layout_constraintBottom_toTopOf="@id/btn_eng"
        />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/emblem"
        app:layout_constraintTop_toTopOf="@id/viewLogo"
        app:layout_constraintStart_toStartOf="@id/text_name"
        app:layout_constraintEnd_toEndOf="@id/text_name"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <AnalogClock
        android:id="@+id/analog_clock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/emblem"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/viewLogo"
        app:layout_constraintBottom_toTopOf="@id/text_name"
        app:layout_constraintStart_toStartOf="@id/text_name"
        app:layout_constraintEnd_toEndOf="@id/text_name" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".2" />

    <TextView
        android:id="@+id/text_name"
        style="@style/text_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_language"
        android:textAlignment="center"
        android:textSize="44sp"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="@id/viewLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/viewLogo"
        app:layout_constraintEnd_toEndOf="@id/viewLogo"/>

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineDetailsStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".7" />

    <View
        android:id="@+id/viewDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:alpha="0.8"
        android:background="@drawable/ic_details_bg"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toTopOf="@id/viewLogo"
        app:layout_constraintBottom_toBottomOf="@id/viewLogo"
        app:layout_constraintEnd_toStartOf="@id/viewPay"
        app:layout_constraintStart_toStartOf="@id/guidelineDetailsStart"/>



    <ImageView
        android:id="@+id/ivEntry"
        android:layout_width="170dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_entry"
        app:layout_constraintEnd_toEndOf="@id/viewDetails"
        app:layout_constraintStart_toStartOf="@id/viewDetails"
        app:layout_constraintTop_toTopOf="@id/viewDetails"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_month_price"
        style="@style/text_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:drawableStart="@drawable/sparkle"
        android:drawableEnd="@drawable/sparkle"
        android:drawablePadding="24dp"
        android:text="@string/example_entry_price"
        android:textAlignment="center"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="@id/viewDetails"
        app:layout_constraintStart_toStartOf="@id/viewDetails"
        app:layout_constraintTop_toBottomOf="@id/ivEntry" />

    <View
        android:id="@+id/viewPrice"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/tv_month_price"
        app:layout_constraintStart_toStartOf="@id/tv_month_price"
        app:layout_constraintTop_toBottomOf="@id/tv_month_price" />

    <TextView
        android:id="@+id/tv_commis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:visibility="gone"
        android:text="@string/commis_text"
        android:textColor="@color/black"
        android:textSize="6sp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="@id/viewPrice"
        app:layout_constraintEnd_toEndOf="@id/viewPrice"
        app:layout_constraintTop_toTopOf="@id/tv_month_price"
        app:layout_constraintBottom_toBottomOf="@id/tv_paid_by_cash"/>

    <!--<androidx.constraintlayout.widget.Group
        android:id="@+id/ll_trans_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="ivPay,tv_show_mode,tv_paid_by_cash" />-->

    <TextView
        android:id="@+id/tv_paid_by_cash"
        style="@style/text_normal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/Paid"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@id/viewDetails"
        app:layout_constraintStart_toStartOf="@id/viewDetails"
        app:layout_constraintTop_toBottomOf="@id/viewPrice" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/payGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="viewPay,tv_show_mode,ivPay" />

    <View
        android:id="@+id/viewPay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.8"
        android:background="@drawable/ic_logo_bg"
        app:layout_constraintBottom_toTopOf="@+id/btn_donation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineDetails"
        app:layout_constraintTop_toTopOf="@id/viewDetails" />

    <ImageView
        android:id="@+id/ivPay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/pay"
        android:visibility="visible"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toTopOf="@id/viewPay"
        app:layout_constraintStart_toStartOf="@id/viewPay"
        app:layout_constraintEnd_toEndOf="@id/viewPay"
        app:layout_constraintBottom_toBottomOf="@id/ivLogo"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_show_mode"
        style="@style/text_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="32dp"
        android:text="@string/mode_custom_cc_or_cash"
        app:layout_constraintTop_toTopOf="@id/viewPay"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/viewPay"
        app:layout_constraintEnd_toEndOf="@id/viewPay"/>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/video_bg"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="@id/vv_tap_card"
        app:layout_constraintBottom_toBottomOf="@id/vv_tap_card"
        app:layout_constraintStart_toStartOf="@id/vv_tap_card"
        app:layout_constraintEnd_toEndOf="@id/vv_tap_card" />

    <VideoView
        android:id="@+id/vv_tap_card"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/video_bg"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/viewDetails"
        app:layout_constraintBottom_toTopOf="@id/btn_eng"
        app:layout_constraintStart_toStartOf="@id/viewDetails"
        app:layout_constraintEnd_toStartOf="@id/vv_swipe_cc"/>

    <VideoView
        android:id="@+id/vv_swipe_cc"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/viewDetails"
        app:layout_constraintBottom_toTopOf="@id/btn_eng"
        app:layout_constraintStart_toEndOf="@id/vv_tap_card"
        app:layout_constraintEnd_toStartOf="@id/vv_insert_cash"/>

    <VideoView
        android:id="@+id/vv_insert_cash"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/viewDetails"
        app:layout_constraintBottom_toTopOf="@id/btn_eng"
        app:layout_constraintStart_toEndOf="@id/vv_swipe_cc"
        app:layout_constraintEnd_toEndOf="@id/viewDetails"/>


    <Button
        android:id="@+id/btn_self_charger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_buttons_background"
        android:gravity="center"
        android:textAlignment="center"
        android:paddingStart="12dp"
        android:paddingEnd="24dp"
        android:text="@string/add_funds"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:textAllCaps="false"
        android:textColor="@color/greyish"
        android:textStyle="bold"
        android:visibility="visible"
        android:layout_marginBottom="20dp"
        android:textSize="20sp"
        android:drawableStart="@drawable/card_color_s_24"
        android:drawablePadding="8dp"
        app:layout_constraintStart_toStartOf="@id/viewPrice"
        app:layout_constraintEnd_toStartOf="@id/btn_more"
        app:layout_constraintBottom_toBottomOf="@id/viewDetails"/>

    <Button
        android:id="@+id/btn_cancel_transaction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:background="@drawable/ic_buttons_background"
        android:drawableStart="@drawable/cancel_24"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:paddingStart="12dp"
        android:paddingEnd="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="@color/greyish"
        android:textStyle="bold"
        android:visibility="gone"
        android:textSize="16sp"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/viewPrice"
        app:layout_constraintEnd_toStartOf="@id/btn_more"
        app:layout_constraintTop_toBottomOf="@id/tv_paid_by_cash"
        app:layout_constraintBottom_toBottomOf="@id/viewDetails"/>

    <Button
        android:id="@+id/btn_more"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_buttons_background"
        android:drawableStart="@drawable/ic_options"
        android:drawablePadding="8dp"
        android:gravity="center"
        android:textAlignment="center"
        android:layout_marginStart="16dp"
        android:paddingStart="12dp"
        android:paddingEnd="24dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:text="@string/options"
        android:textAllCaps="false"
        android:textColor="@color/greyish"
        android:textStyle="bold"
        android:textSize="20sp"
        app:layout_constraintStart_toEndOf="@id/btn_self_charger"
        app:layout_constraintEnd_toEndOf="@id/viewPrice"
        app:layout_constraintTop_toTopOf="@id/btn_self_charger" />

<Button
    android:id="@+id/btn_towel"
    android:layout_width="95dp"
    android:layout_height="123dp"
    android:src="@drawable/additional_towel_small"
    android:visibility="gone"
    android:layout_marginEnd="-12dp"
    android:drawablePadding="5dp"
    android:text="@string/Extra_towels_btn"
    android:textSize="@dimen/size_medium_3"

    app:layout_constraintBottom_toTopOf="@id/viewDetails"
    app:layout_constraintEnd_toEndOf="@id/viewDetails"
    app:layout_constraintTop_toTopOf="@id/viewDetails" />

    <Button
        android:id="@+id/btn_heb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="Heb"
        android:textColor="@color/white"
        android:background="@drawable/ic_blue_buttons_bg"
        android:layout_marginBottom="8dp"
        android:textSize="36sp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="@id/viewLogo"
        app:layout_constraintEnd_toStartOf="@id/btn_eng"
        app:layout_constraintBottom_toTopOf="@id/viewBottom"
        app:layout_constraintHorizontal_chainStyle="packed"
        />

    <Button
        android:id="@+id/btn_eng"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_blue_buttons_bg"
        android:paddingStart="30dp"
        android:paddingTop="20dp"
        android:paddingEnd="30dp"
        android:paddingBottom="20dp"
        android:text="@string/eng"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/viewBottom"
        app:layout_constraintEnd_toStartOf="@id/btn_yid"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/btn_heb"
        tools:text="En" />
<!--    android:id="@+id/btn_yid"-->
    <Button
        android:id="@+id/btn_yid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:text="@string/yid"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="10dp"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:textAlignment="center"
        android:background="@drawable/ic_blue_buttons_bg"
        app:layout_constraintStart_toEndOf="@id/btn_eng"
        app:layout_constraintEnd_toStartOf="@id/btn_donation"
        app:layout_constraintBottom_toTopOf="@id/viewBottom"
        app:layout_constraintHorizontal_chainStyle="packed"
        tools:text="א"/>

<!--    android:id="@+id/btn_donation"-->
    <Button
        android:id="@+id/btn_donation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/ic_blue_buttons_bg"
        android:gravity="center"
        android:paddingStart="@dimen/size_medium_1_1"
        android:paddingTop="20dp"
        android:paddingEnd="@dimen/size_medium_1_1"

        android:paddingBottom="20dp"
        android:text="@string/Donation"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/viewBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toEndOf="@id/btn_yid" />

    <View
        android:id="@+id/viewBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@drawable/ic_powered_by_bg"
        android:layout_marginTop="-4dp"
        app:layout_constraintTop_toTopOf="@id/tvPoweredBy"
        app:layout_constraintBottom_toBottomOf="parent" />


    <TextView
        android:id="@+id/tvPoweredBy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/powered_by"
        android:textSize="8sp"
        android:textColor="@color/greyish"
        android:layout_marginBottom="4dp"
        android:drawablePadding="16dp"
        app:layout_constraintStart_toStartOf="@id/btn_eng"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/tvOnline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/online"
        android:textSize="8sp"
        android:textColor="@color/greyish"
        android:drawablePadding="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toStartOf="@id/tv_ip"
        app:layout_constraintBottom_toBottomOf="@id/tvPoweredBy" />

    <TextView
        android:id="@+id/tv_ip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="65"
        android:textSize="8sp"
        android:layout_marginEnd="2dp"
        android:textColor="@color/greyish"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvOnline"
        app:layout_constraintBottom_toBottomOf="@id/tvOnline"

        />


<!-- -->

<!--    android:id="@+id/fl_msg"    -->
    <mid.uicomp.AutoResizeTextView
        android:id="@+id/fl_msg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/yellow"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_default="percent"
        app:layout_constraintHeight_percent=".6"
        app:layout_constraintWidth_default="percent"
        app:layout_constraintWidth_percent=".7"
        />

<!--    android:id="@+id/shabbat_writing"-->
    <TextView
    android:id="@+id/shabbat_writing"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="גוט שבת"
    android:textColor="@color/white"

    android:layout_margin="@dimen/size_medium_6"
    android:textSize="@dimen/size_large_3"
    android:visibility="gone"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<!--    android:id="@+id/tv_user_msg"    -->
    <TextView
        android:id="@+id/tv_user_msg"
        style="@style/text_normal"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/size_large_2"
        android:layout_alignParentBottom="true"
        android:background="@color/yellow"
        android:gravity="center"

        android:maxLines="2"
        android:visibility="gone"
        android:textColor="@color/blue_dark_line"
        android:textSize="@dimen/size_medium_5"

        android:textStyle="bold"

        app:layout_constraintBottom_toBottomOf="@+id/viewDetails"
        app:layout_constraintEnd_toEndOf="@id/viewDetails"
        app:layout_constraintStart_toStartOf="@id/viewDetails"
        />


