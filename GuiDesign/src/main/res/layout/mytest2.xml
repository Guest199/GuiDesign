        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/Paid"
        android:textSize="42sp"
        app:layout_constraintEnd_toEndOf="@id/viewDetails"
        app:layout_constraintStart_toStartOf="@id/viewDetails"
        app:layout_constraintTop_toBottomOf="@id/viewPrice" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/payGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="viewPay,tv_show_mode,ivPay" />

    <View
        android:id="@+id/viewPay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.8"
        android:background="@drawable/ic_logo_bg"
        app:layout_constraintBottom_toBottomOf="@id/viewDetails"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/guidelineDetails"
        app:layout_constraintTop_toTopOf="@id/viewDetails" />

    <ImageView
        android:id="@+id/ivPay"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="@id/ivLogo"
        app:layout_constraintEnd_toEndOf="@id/viewPay"
        app:layout_constraintStart_toStartOf="@id/viewPay"
        app:layout_constraintTop_toTopOf="@id/viewPay"
