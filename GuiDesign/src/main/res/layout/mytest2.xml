        android:src="@drawable/additional_towel_small"
        android:text="@string/Extra_towels_btn"
        android:textSize="@dimen/size_medium_3"
        android:visibility="gone"

        app:layout_constraintBottom_toTopOf="@id/viewDetails"
        app:layout_constraintEnd_toEndOf="@id/viewDetails"
        app:layout_constraintTop_toTopOf="@id/viewDetails" />



    <Button
        android:id="@+id/btn_heb"
        android:layout_width="wrap_content"
