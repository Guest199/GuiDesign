        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/viewPay"
        app:layout_constraintStart_toStartOf="@id/viewPay"
        app:layout_constraintTop_toTopOf="@id/viewPay" />

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/video_bg"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/vv_tap_card"
        app:layout_constraintEnd_toEndOf="@id/vv_tap_card"
        app:layout_constraintStart_toStartOf="@id/vv_tap_card"
        app:layout_constraintTop_toTopOf="@id/vv_tap_card" />

    <VideoView
        android:id="@+id/vv_tap_card"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:background="@drawable/video_bg"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btn_eng"
        app:layout_constraintEnd_toStartOf="@id/vv_swipe_cc"
        app:layout_constraintStart_toStartOf="@id/viewDetails"
        app:layout_constraintTop_toBottomOf="@id/viewDetails" />

    <VideoView
        android:id="@+id/vv_swipe_cc"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/btn_eng"
        app:layout_constraintEnd_toStartOf="@id/vv_insert_cash"
