<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <VideoView
        android:id="@+id/videoView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <VideoView
        android:id="@+id/vv_show_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/dateGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="tv_date,tv_time,tv_date_heb" />

    <TextView
        android:id="@+id/tv_date"
        style="@style/text_normal_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/placeholder_date"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_time"
        style="@style/text_normal_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:text="@string/placeholder_time"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_date_heb"
        style="@style/text_normal_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="@string/placeholder_logo_text"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_end="691dp" />

    <View
        android:id="@+id/viewLogo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:alpha="0.8"
        android:background="@drawable/ic_logo_bg"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/viewButtons"
        app:layout_constraintEnd_toStartOf="@id/viewDetails"
        app:layout_constraintStart_toStartOf="@id/tv_date"
        app:layout_constraintTop_toBottomOf="@id/tv_date" />

    <View
        android:id="@+id/viewButtons"
        android:layout_width="match_parent"
        android:background="@color/transparent"
        android:layout_height="0dp"
        android:visibility="visible"
        app:layout_constraintTop_toTopOf="@id/guidelineButtons"
        app:layout_constraintBottom_toTopOf="@id/viewBottom" />

    <TextView
        android:id="@+id/tv_operator_msg"
        style="@style/text_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="6dp"
        android:text="@string/operator_message"
        android:textAlignment="center"
        android:textSize="15sp"
        app:layout_constraintBottom_toBottomOf="@+id/viewLogo"
        app:layout_constraintEnd_toEndOf="@+id/viewLogo"
        app:layout_constraintStart_toStartOf="@+id/viewLogo"
        app:layout_constraintTop_toBottomOf="@+id/text_name" />

    <ImageView
        android:id="@+id/ivLogo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:src="@drawable/emblem"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="@id/text_name"
        app:layout_constraintStart_toStartOf="@id/text_name"
        app:layout_constraintTop_toTopOf="@id/viewLogo"
        tools:ignore="ContentDescription" />

    <AnalogClock
        android:id="@+id/analog_clock"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/emblem"
        android:visibility="visible"
        app:layout_constraintBottom_toTopOf="@id/text_name"
        app:layout_constraintEnd_toEndOf="@id/text_name"
        app:layout_constraintStart_toStartOf="@id/text_name"
        app:layout_constraintTop_toTopOf="@id/viewLogo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".2" />

    <TextView
        android:id="@+id/text_name"
        style="@style/text_black"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="@string/placeholder_language"
        android:textAlignment="center"
        android:textSize="44sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/viewLogo"
        app:layout_constraintStart_toStartOf="@id/viewLogo"
        app:layout_constraintTop_toTopOf="@id/viewLogo" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineDetailsStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".3" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".7" />

    <View
        android:id="@+id/viewDetails"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.8"
        android:background="@drawable/ic_details_bg"
        app:layout_constraintBottom_toBottomOf="@id/viewLogo"
        app:layout_constraintEnd_toStartOf="@id/viewPay"
        app:layout_constraintStart_toStartOf="@id/guidelineDetailsStart"
        app:layout_constraintTop_toTopOf="@id/viewLogo" />


    <ImageView
        android:id="@+id/ivEntry"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_entry"
        app:layout_constraintEnd_toEndOf="@id/viewDetails"
        app:layout_constraintStart_toStartOf="@id/viewDetails"
        app:layout_constraintTop_toTopOf="@id/viewDetails"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/tv_month_price"
        style="@style/text_normal"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:drawableStart="@drawable/sparkle"
        android:drawableEnd="@drawable/sparkle"

        android:text="@string/example_entry_price"
        android:textAlignment="center"
        android:textSize="30sp"

        app:layout_constraintEnd_toEndOf="@id/viewDetails"
        app:layout_constraintStart_toStartOf="@id/viewDetails"
        app:layout_constraintTop_toBottomOf="@id/ivEntry" />

    <View
        android:id="@+id/viewPrice"
        android:layout_width="0dp"
        android:layout_height="2dp"
        android:layout_marginTop="16dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="@id/tv_month_price"
        app:layout_constraintStart_toStartOf="@id/tv_month_price"
        app:layout_constraintTop_toBottomOf="@id/tv_month_price" />

    <TextView
        android:id="@+id/tv_commis"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/commis_text"
        android:textColor="@color/black"
        android:textSize="6sp"
        android:textStyle="bold"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/tv_paid_by_cash"
        app:layout_constraintEnd_toEndOf="@id/viewPrice"
        app:layout_constraintStart_toStartOf="@id/viewPrice"
        app:layout_constraintTop_toTopOf="@id/tv_month_price" />

    <!--<androidx.constraintlayout.widget.Group
        android:id="@+id/ll_trans_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="visible"
        app:constraint_referenced_ids="ivPay,tv_show_mode,tv_paid_by_cash" />-->

    <TextView
        android:id="@+id/tv_paid_by_cash"
